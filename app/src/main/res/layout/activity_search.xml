<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/green">

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_marginStart="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/backward" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center"
            android:text="검색"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/searchEdit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/boundlimit_background"
            android:ems="10"
            android:hint="찾으시는 동아리가 있나요?"
            android:inputType="textPersonName"
            android:paddingHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/searchBtn"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginEnd="23dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/searchbtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="범위별 동아리"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/centralClubText"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="중앙 동아리"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/collegeClubText"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="단과대 동아리"
            android:textColor="@color/green"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/majorClubText"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="과 동아리"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/smallClubText"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="소모임"
            android:textColor="@color/green"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="종류별 동아리"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/friendshipText"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="친목/여행"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/serviceText"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="봉사"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/physicalText"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="체육"
            android:textColor="@color/green"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/musicText"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="노래/댄스"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/gameText"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="게임"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/artText"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="문화예술"
            android:textColor="@color/green"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/craftText"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="공예/만들기"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/languageText"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="언어"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mediaText"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="미디어/사진"
            android:textColor="@color/green"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/studyText"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="학술/스터디"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/animalText"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="반려동물"
            android:textColor="@color/green"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/etcText"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/yellow_green_background"
            android:gravity="center"
            android:text="기타"
            android:textColor="@color/green"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>